{
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "transform": {
    "^.+\\.[t|j]sx?$": "ts-jest"
  },
  "testMatch": ["**/*.test.tsx", "**/*.test.ts"],
  "testEnvironment": "jsdom",
  "moduleFileExtensions": ["js", "ts", "tsx"],
  "moduleNameMapper": {
    "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "babel-jest",
    "^.+\\.(css|less|scss)$": "babel-jest",
    "^@tests(.*)$": "<rootDir>/src/tests$1"
  },
  "moduleDirectories": [
    "node_modules",
    "src/tests/helpers"
]
}
